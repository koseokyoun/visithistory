<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.LocationMapper">

    <resultMap id="locationResultMap" type="Location">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="latitude" column="latitude"/>
        <result property="longitude" column="longitude"/>
        <result property="imageUrl" column="image_url"/>
        <result property="visitedDate" column="visited_date"/>
        <result property="memo" column="memo"/>
    </resultMap>

    <select id="findAll" resultMap="locationResultMap">
        SELECT * FROM locations
    </select>

    <select id="findById" resultMap="locationResultMap" parameterType="long">
        SELECT * FROM locations WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="Location">
        INSERT INTO locations (name, address, latitude, longitude, image_url, visited_date, memo)
        VALUES (#{name}, #{address}, #{latitude}, #{longitude}, #{imageUrl}, #{visitedDate}, #{memo})
    </insert>

    <update id="update" parameterType="Location">
        UPDATE locations
        SET name = #{name},
        address = #{address},
        latitude = #{latitude},
        longitude = #{longitude},
        image_url = #{imageUrl},
        visited_date = #{visitedDate},
        memo = #{memo}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM locations WHERE id = #{id}
    </delete>

</mapper>
